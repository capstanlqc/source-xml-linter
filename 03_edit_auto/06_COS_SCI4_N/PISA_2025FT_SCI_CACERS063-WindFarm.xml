        <sharedstimulus id="assets/85eae8036392955486aed/passage NEW 1.xml">
            <label key="a86fcee0221c84098dba862f8efc6621">
                <text>Wind Farm</text>
            </label>
            <label key="41f946946220fe6fa3870783bdef5c8d">
                <text>The residents of a town are investigating whether they have a suitable site for a wind farm.</text>
            </label>
            <label key="5362ae0331520125d4f8204a97c5854d">
                <text>The table below shows wind conditions at four potential sites around the town.</text>
            </label>
            <label key="a7d6475ec8993b7224d6facc8cb0ead6">
                <text>Site</text>
            </label>
            <label key="aabc230ba440519840bb6d11afac5f77">
                <text>Peak wind speed</text>
            </label>
            <label key="5bb9772f5973ea49572c92c314cf6247">
                <text>
                    (m/s)
                </text>
            </label>
            <label key="54cf4cc386e859f963b1539cc9f4b975">
                <text>Average wind speed</text>
            </label>
            <label key="c96a7dea1ff89c91162776c1d45b91c0">
                <text>Percentage of time with no wind</text>
            </label>
            <label key="7fc56270e7a70fa81a5935b72eacbe29">
                <text>A</text>
            </label>
            <label key="42025c145fac9a208f66128d9a1ef198">
                <text>11.4%</text>
            </label>
            <label key="9d5ed678fe57bcca610140957afab571">
                <text>B</text>
            </label>
            <label key="1569f4bca7e6e54589cb3708fb0b6e7b">
